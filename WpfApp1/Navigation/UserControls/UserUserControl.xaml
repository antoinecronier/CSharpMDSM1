<UserControl x:Class="WpfApp1.Navigation.UserControls.UserUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1.Navigation.UserControls"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBox x:Name="txtBFirstname" Grid.Row="0" Text="{Binding User.Firstname, Mode=TwoWay}"></TextBox>
        <TextBox x:Name="txtBLastname" Grid.Row="1"  Text="{Binding User.Lastname, Mode=TwoWay}"></TextBox>
    </Grid>
</UserControl>
